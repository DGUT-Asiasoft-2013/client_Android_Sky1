<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:orientation="vertical" >
<!-- 这里后期改动 -->
        <com.itcast.booksale.fragment.widgets.AvatarView
            android:id="@+id/book_avatar"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:background="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cell_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="书籍名称--作者"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_about_book"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="内容简介"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/edit_date"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="right"
            android:text="2016-4-5"
            android:textColor="@android:color/holo_blue_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:orientation="vertical" >
        
        <TextView android:id="@+id/book_price"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:text="价格"
            android:gravity="center"/>
        
        <Button android:id="@+id/book_purchase"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="0.5"
            android:text="想淘"
            android:textSize="12sp"/>
        
    </LinearLayout>

</LinearLayout>