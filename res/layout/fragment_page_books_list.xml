<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9E6B0"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9E6B0" >

        <LinearLayout
            android:id="@+id/lin_first"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#D9E6B0"
            android:orientation="horizontal" >

            <!-- 搜索 -->

            <EditText
                android:id="@+id/search_keyword"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.8"
                android:background="@drawable/bg_edittext"
                android:gravity="center"
                android:hint="搜索ISBN"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/search2" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/view_page"
            android:layout_width="wrap_content"
            android:layout_height="150dip" 
            android:layout_below="@id/lin_first">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" >
            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_gravity="bottom|center_horizontal"
                android:background="#33000000"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图片之间的切换内容"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:orientation="horizontal" >

                    <!-- 五个点，使用shape画五个点 -->

                    <View
                        android:id="@+id/dop_0"
                        android:layout_width="5dip"
                        android:layout_height="5dip"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="2dip"
                        android:background="@drawable/dot_focused" />

                    <View
                        android:id="@+id/dop_1"
                        android:layout_width="5dip"
                        android:layout_height="5dip"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="2dip"
                        android:background="@drawable/dot_normal" />

                    <View
                        android:id="@+id/dop_2"
                        android:layout_width="5dip"
                        android:layout_height="5dip"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="2dip"
                        android:background="@drawable/dot_normal" />

                    <View
                        android:id="@+id/dop_3"
                        android:layout_width="5dip"
                        android:layout_height="5dip"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="2dip"
                        android:background="@drawable/dot_normal" />

                    <View
                        android:id="@+id/dop_4"
                        android:layout_width="5dip"
                        android:layout_height="5dip"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="2dip"
                        android:background="@drawable/dot_normal" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/lin_sec"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/view_page"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#D9E6B0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_first"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="图书分类:"
                android:textSize="16sp" />
            <!-- 书籍分类 -->

            <Spinner
                android:id="@+id/spinner_book_tag_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_first"
                android:layout_weight="0.3" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/darker_gray" />
    <!-- 自定义listview -->

    <com.itcast.booksale.effects.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include layout="@layout/refresh_head" />
        <!-- 支持所有实现Pullable接口的View -->
        <!-- 书籍列表 -->

        <com.itcast.booksale.effects.PullableListView
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D9E6B0"
            android:descendantFocusability="blocksDescendants"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            android:footerDividersEnabled="true"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp" />

        <include layout="@layout/load_more" />
    </com.itcast.booksale.effects.PullToRefreshLayout>


</LinearLayout>