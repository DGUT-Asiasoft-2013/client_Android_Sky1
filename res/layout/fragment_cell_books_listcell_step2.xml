<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/card_bk"
    android:orientation="vertical"
    android:padding="8dp" >

    <!-- Head of Card -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="8dp" >

        <com.itcast.booksale.fragment.widgets.AvatarView
            android:id="@+id/user_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/user_avatar"
            android:gravity="left"
            android:text="昵称"
            android:textColor="#00838B" />

        <TextView
            android:id="@+id/edit_date"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_below="@id/user_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/user_avatar"
            android:text="12-27"
            android:textSize="7dp" />

    </RelativeLayout>

    <!-- body of Card -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#EDEEF2"
        android:orientation="horizontal"
        android:padding="8dp" >

        <com.itcast.booksale.fragment.widgets.BookAvatarView
            android:id="@+id/book_avatar"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/book_avatar"
            android:layout_marginLeft="10dp"
            android:text="书籍名称"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/book_price"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/book_avatar"
            android:text="价格"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/book_avatar"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/book_price"
            android:gravity="right"
            android:text="作者"
            android:textColor="#989898"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_about_book"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@id/book_title"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:text="内容简介"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

        <Button
            android:id="@+id/book_purchase"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/book_price"
            android:layout_weight="0.5"
            android:background="@android:color/holo_green_light"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="加入购物车"
            android:textSize="10sp" />
    </RelativeLayout>

    <!-- End of Card -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/tv_fans"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="粉丝数(订阅数)"
            android:textColor="#C2C0C5"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_comments"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:focusable="false" 
            android:gravity="center"
            android:text="评论(评论数)"
            android:textColor="#C2C0C5"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_likes"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@id/tv_comments"
            android:focusable="false" 
            android:gravity="center"
            android:text="点赞(点赞数)"
            android:textColor="#C2C0C5"
            android:textSize="10dp" />
    </RelativeLayout>

</LinearLayout>