<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:padding="5dp" >

    <TextView
        android:id="@+id/text_bills_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="12-28"
        android:textColor="@android:color/darker_gray"
        android:textSize="8pt" />

    <com.itcast.booksale.fragment.widgets.AvatarView
        android:id="@+id/avatar_bills_saler"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_bills_monery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:gravity="start|center_vertical"
                android:text="+24.00"
                android:textColor="@android:color/black"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/text_bills_sate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:text="交易关闭"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="6pt" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_bills_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:gravity="start|center_vertical"
            android:text="今日在显卡声卡设计开发店购买好卡建行卡很快就登录器"
            android:textColor="@android:color/darker_gray"
            android:textSize="7pt" />
    </LinearLayout>

</LinearLayout>