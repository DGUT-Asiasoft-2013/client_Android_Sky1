<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="确认支付" />

    <View
        android:id="@+id/fir"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/top"
        android:background="#E3E3E3" />

    <RelativeLayout
        android:id="@+id/top_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fir"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="8dp" >

        <!-- head -->

        <TextView
            android:id="@+id/c_ordertext"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:text="订单号:"
            android:textColor="#00838B" />

        <TextView
            android:id="@+id/c_orders_numb"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/c_ordertext"
            android:gravity="left"
            android:text="44455456" />
    </RelativeLayout>
     <View
        android:id="@+id/fir_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/top_order"
        android:background="#E3E3E3" />

    <View
        android:id="@+id/sec"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fir_1"
        android:layout_marginTop="20dp"
        android:background="#E3E3E3" />

    <RelativeLayout
        android:id="@+id/rel_step1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sec"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="8dp" >

        <!-- head -->

        <com.itcast.booksale.fragment.widgets.AvatarView
            android:id="@+id/c_user_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/c_user_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/c_user_avatar"
            android:gravity="left"
            android:text="买家昵称"
            android:textColor="#00838B" />

        <View
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/c_user_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="#E3E3E3" />

        <TextView
            android:id="@+id/c_user_moneytext"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/line_1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:text="余额:" />

        <TextView
            android:id="@+id/c_user_money"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/line_1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/c_user_moneytext"
            android:gravity="left"
            android:text="100.0" />
    </RelativeLayout>

    <View
        android:id="@+id/thr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rel_step1"
        android:background="#E3E3E3" />

    <View
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/thr"
        android:layout_marginTop="20dp"
        android:background="#E3E3E3" />

    <RelativeLayout
        android:id="@+id/rel_step2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin2"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="8dp" >

        <!-- head -->

        <TextView
            android:id="@+id/c_user_paytext"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="应付款:"
            android:textColor="#00838B" />

        <TextView
            android:id="@+id/c_user_pay"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/c_user_paytext"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:text="100.0" />
    </RelativeLayout>

    <View
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rel_step2"
        android:background="#E3E3E3" />

    <TextView
        android:id="@+id/btn_pay_money"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/lin3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_bg_blue"
        android:gravity="center"
        android:text="确定付款" />

</RelativeLayout>